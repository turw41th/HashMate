<Window x:Class="HashMate.Client.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:HashMate.Client.UI.ViewModels"
        xmlns:views="clr-namespace:HashMate.Client.UI.Views"
        xmlns:local="clr-namespace:HashMate.Client.UI"
        mc:Ignorable="d"
        Title="HashMate" Height="600" Width="450" MinHeight="600" MinWidth="450">

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <TabControl>
            <TabItem Header="Text to Hash">
                <ContentControl Content="{Binding TextToHashViewModel}"/>
            </TabItem>
            <TabItem Header="File to Hash">
                <ContentControl Content="{Binding FileToHashViewModel}"/>
            </TabItem>
        </TabControl>
        
        <Button Command="{Binding HashButtonClickCommand}" Grid.Row="1" Margin="5" Width="100" HorizontalAlignment="Right" Content="Get Hashes">

        </Button>
    </Grid>
</Window>
